@model Vidly.ViewModels.movieViewModel
@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })

        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })


        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "--Select Genre--", new { @class = "form-control" })


        @Html.LabelFor(m => m.Movie.stockNumber)
        @Html.TextBoxFor(m => m.Movie.stockNumber, new { @class = "form-control" })

    </div>

    @Html.HiddenFor(m=>m.Movie.Id)


    <button type="submit" value="submit" class="btn btn-primary">Save</button>


}

